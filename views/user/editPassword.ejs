<%- include('../partials/header') %>

<div class="jumbotron jumbotron-fluid">
    <h2 class="mb-3 text-center"><%= title %></h2>

    <% if(errors) {%>
        <div class="alert alert-danger mb-3" role="alert">
        <% errors.forEach(error => { %>
            <p class="text-center"><%= error.msg %></p>
        <% }) %>
        </div>
    <% } %>

    <div class="mb-3 d-flex justify-content-center">
        <form class="form-wide" action="/user/profile/edit/password" method="POST">
            <div class="form-group">
                <label for="inputOldPassword">Stara lozinka</label>
                <input type="password" class="form-control" id="inputOldPassword" name="oldPassword" required placeholder="Unesite staru lozinku" autofocus />
            </div>
            <div class="form-group">
                <label for="inputNewPassword">Nova lozinka</label>
                <input type="password" class="form-control" id="inputNewPassword" name="newPassword" required placeholder="Unesite novu lozinku" />
            </div>
           <div class="form-group">
                <label for="inputNewPasswordConfirm">Ponovljena nova lozinka</label>
                <input type="password" name="newPasswordConfirm" class="form-control" id="inputNewPasswordConfirm" required placeholder="Ponovite novu lozinku" />
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success">Izmenite lozinku</button>
            </div>
        </form>
    </div>
    <div class="mt-2 d-flex justify-content-center">
        <a class="btn btn-primary" href="/user/profile">Povratak na profil</a>
    </div>
</div>