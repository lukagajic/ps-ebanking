<%- include('../partials/header') %>

<div class="jumbotron jumbotron-fluid">
    <h2 class="mb-3 text-center"><%= title %></h2>
    <hr>
    <div class="d-flex justify-content-center mt-2">
        <form action="/account/create" method="POST" class="form-wide">
            <div class="form-group">
                <label for="inputCurrency">Izaberite valutu računa</label>
                <select class="form-control" required name="currency" id="inputCurrency">
                    <% currencies.forEach(currency => { %>
                        <option value="<%= currency.dataValues.currencyId %>">
                            <%= currency.dataValues.code %>
                        </option>
                    <% }) %>
                </select>
                <small>
                    <strong>Napomena:</strong> broj računa će biti automatski generisan od strane sistema, u zavisnosti od valute
                </small>
            </div>
            <div class="d-flex justify-content-center">
                <button class="btn btn-success">
                    Kreirajte novi račun
                </button>
            </div>
        </form>
    </div>
    <div class="d-flex justify-content-center mt-3">
        <a href="/account/list" class="btn btn-primary">Povratak na listu računa</a>
    </div>
</div>